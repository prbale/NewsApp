<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="app.bale.newsapplication.ui.newsList.NewsFragment"
        android:label="News">
        <action
            android:id="@+id/action_newsFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailsFragment"
        android:name="app.bale.newsapplication.ui.newsDetails.NewsDetailsFragment"
        android:label="News Details" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="app.bale.newsapplication.ui.category.CategoryFragment"
        android:label="News Categories"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/bookmarkedFragment"
        android:name="app.bale.newsapplication.ui.bookmarked.BookmarkedFragment"
        android:label="Bookmarked News"
        tools:layout="@layout/fragment_bookmarked" />
</navigation>